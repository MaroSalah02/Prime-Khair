.invisible {
  visibility: hidden;
  max-height: 0px;
  margin: 0px;
  max-width: 0%;
  margin: 0px;
  padding: 0px;
  border: 0px;
  position: absolute;
  z-index: -1;
}

.invisible > * {
  visibility: hidden;
  max-height: 0px;
  margin: 0px;
  max-width: 0%;
  margin: 0px;
  padding: 0px;
}
