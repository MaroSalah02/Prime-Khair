.card {
  display: flex;
  flex-direction: column;
  color: black;
  margin-left: 4%;
  flex-grow: 0;
  width: 50%;
  margin-left: none;
  margin-right: none;
  background-color: #ddd;
  box-shadow: 0 14px 14px rgba(0, 0, 0, 0.9);
  /* height: 200px; */
  /* margin-top: 12%; */
  border-radius: 20px;
  padding: 3%;
  text-align: center;
  transform: scale3d(0.8, 0.8);
  margin-bottom: 6%;
}
.details {
  display: flex;
  flex-direction: column;
  padding: 20px;
  gap: 30px;
}
.card button {
  color: black;
  background-color: #c2a83e;
  width: 20%;
  padding: 10px;
  border-radius: 5px;
  cursor: pointer;
  margin-left: auto;
  margin-right: auto;
  transition: 0.3s ease-in-out;
}
.card button:hover {
  scale: 1.1;
}

#page {
  margin-left: 3%;
  width: 97%;
  margin: 0 auto;
  margin-top: 10.7vh;
  padding-top: 6.5%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

body {
  min-height: 100vh;
}

#page-header {
  color: #fff;
  font-weight: bold;
  font-size: 20px;
}

